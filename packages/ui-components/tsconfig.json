{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "dist",
    "composite": true,
    "noEmit": false,
    "noEmitOnError": false,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "module": "esnext",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "dist", "build"],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
    "src/**/*.js",
    "src/**/*.css",
    "types/**/*.d.ts",
  ]
}

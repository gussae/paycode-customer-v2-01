{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "noEmitOnError": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": ["ES2023", "ES2022", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "paths": {
      //these are paths that would be imported by other workspaces
      "@paycode-customer-v2/constructs/*": ["./packages/constructs/*"],
      "@paycode-customer-v2/lib": ["./packages/lib/*"],
      "@paycode-customer-v2/models/*": ["./packages/models/*"],
      "@paycode-customer-v2/ui-components/*": ["./packages/ui-components/*"],
      "@paycode-customer-v2/ui-utils/*": ["./packages/ui-utils/*"],
    },
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "preserveConstEnums": true,
    "target": "ES2021",
    "useUnknownInCatchVariables": false
  }
}
